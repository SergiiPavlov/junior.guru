{
  "name": "@junior-ua/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate --schema ../../packages/db/prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema ../../packages/db/prisma/schema.prisma && npm run prisma:generate",
    "db:seed": "npm run prisma:generate && tsx scripts/seed.ts",
    "search:reindex": "tsx scripts/search-reindex.ts",
    "test": "tsx --test"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.0",
    "@prisma/client": "^5.22.0",
    "hono": "^4.6.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "prisma": "^5.22.0",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4"
  }
}
